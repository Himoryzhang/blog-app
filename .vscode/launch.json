{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Astro Dev Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/astro",
      "args": [
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
